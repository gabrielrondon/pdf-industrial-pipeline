# Stage 8: Development Environment Configuration
# PDF Industrial Pipeline - Development Settings

# ================================
# Application Settings
# ================================
ENVIRONMENT=development
LOG_LEVEL=DEBUG
DEBUG=true

# ================================
# Server Configuration
# ================================
HOST=0.0.0.0
PORT=8000
WORKERS=1
RELOAD=true

# ================================
# Redis Configuration
# ================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_MAX_CONNECTIONS=50

# ================================
# Database Configuration
# ================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=pdf_pipeline_dev
POSTGRES_USER=dev_user
POSTGRES_PASSWORD=dev_pass
DATABASE_URL=postgresql://dev_user:dev_pass@localhost:5432/pdf_pipeline_dev

# ================================
# Storage Configuration
# ================================
STORAGE_TYPE=local
STORAGE_PATH=./storage
UPLOAD_MAX_SIZE=50MB
TEMP_DIR=./temp_splits

# ================================
# OCR Configuration
# ================================
TESSERACT_CMD=tesseract
OCR_LANGUAGES=por,eng
OCR_TIMEOUT=120

# ================================
# ML Configuration
# ================================
ML_MODEL_PATH=./ml_models
EMBEDDING_MODEL=neuralmind/bert-base-portuguese-cased
VECTOR_DB_PATH=./embeddings
FAISS_INDEX_TYPE=flat

# ================================
# Performance Configuration
# ================================
CACHE_TTL=1800
MAX_CONCURRENT_JOBS=5
WORKER_TIMEOUT=120
PARALLEL_WORKERS=4

# ================================
# Security Configuration
# ================================
ALLOWED_HOSTS=*
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:8000,http://127.0.0.1:8000
API_KEY_HEADER=X-API-Key
RATE_LIMIT_PER_MINUTE=1000

# ================================
# Monitoring Configuration
# ================================
METRICS_ENABLED=true
HEALTH_CHECK_INTERVAL=60
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# ================================
# Logging Configuration
# ================================
LOG_FORMAT=text
LOG_FILE=./logs/pipeline.log
LOG_ROTATION=daily
LOG_RETENTION_DAYS=7 