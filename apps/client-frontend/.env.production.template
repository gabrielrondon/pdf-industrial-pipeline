# ========================================
# CLIENT FRONTEND - PRODUCTION ENV
# ========================================
# Copy this file to .env.production and fill in your actual values

# ========================================
# VITE BUILD CONFIGURATION
# ========================================
NODE_ENV=production
VITE_APP_NAME="PDF Industrial Pipeline"
VITE_APP_VERSION="1.0.0"

# ========================================
# API CONFIGURATION
# ========================================
# Backend API URL
VITE_API_BASE_URL="https://api.your-domain.com"
VITE_API_VERSION="v2"
VITE_API_TIMEOUT=30000

# ========================================
# SUPABASE CONFIGURATION
# ========================================
# Supabase (REQUIRED for authentication)
VITE_SUPABASE_URL="https://your-project.supabase.co"
VITE_SUPABASE_ANON_KEY="your-supabase-anon-key"

# ========================================
# STRIPE CONFIGURATION
# ========================================
# Stripe (REQUIRED for payments)
VITE_STRIPE_PUBLISHABLE_KEY="pk_live_your-stripe-publishable-key"

# Plan Configuration (matching Stripe product IDs)
VITE_PRO_PLAN_PRICE=3900  # R$ 39.00 in cents
VITE_PREMIUM_PLAN_PRICE=9900  # R$ 99.00 in cents
VITE_CURRENCY="BRL"

# ========================================
# FEATURE FLAGS
# ========================================
# Enable/disable features
VITE_ENABLE_SEMANTIC_SEARCH=true
VITE_ENABLE_LARGE_DOCUMENT_PROCESSING=true
VITE_ENABLE_AI_ANALYSIS=true
VITE_ENABLE_JUDICIAL_ANALYSIS=true
VITE_ENABLE_REAL_TIME_UPDATES=true

# ========================================
# ANALYTICS & MONITORING
# ========================================
# Google Analytics (Optional)
VITE_GA_TRACKING_ID="G-XXXXXXXXXX"

# Sentry Error Tracking (Optional)
VITE_SENTRY_DSN="https://your-sentry-dsn@sentry.io/project-id"
VITE_SENTRY_ENVIRONMENT="production"

# ========================================
# UPLOAD CONFIGURATION
# ========================================
# File Upload Limits
VITE_MAX_FILE_SIZE=524288000  # 500MB in bytes
VITE_ALLOWED_FILE_TYPES=".pdf"
VITE_MAX_FILES_PER_UPLOAD=1

# ========================================
# UI/UX CONFIGURATION
# ========================================
# Theme Configuration
VITE_DEFAULT_THEME="light"
VITE_ENABLE_DARK_MODE=true

# Language Configuration
VITE_DEFAULT_LANGUAGE="pt-BR"
VITE_SUPPORTED_LANGUAGES="pt-BR,en-US"

# ========================================
# PERFORMANCE CONFIGURATION
# ========================================
# Polling Intervals (in milliseconds)
VITE_STATUS_POLL_INTERVAL=2000  # 2 seconds
VITE_RESULTS_POLL_INTERVAL=5000  # 5 seconds
VITE_BACKGROUND_POLL_INTERVAL=30000  # 30 seconds

# Cache Configuration
VITE_CACHE_DOCUMENTS=true
VITE_CACHE_DURATION=300000  # 5 minutes

# ========================================
# SECURITY CONFIGURATION
# ========================================
# CORS Origins
VITE_ALLOWED_ORIGINS="https://your-domain.com"

# Content Security Policy
VITE_CSP_ENABLED=true

# ========================================
# DEPLOYMENT CONFIGURATION
# ========================================
# Build Configuration
VITE_BUILD_SOURCEMAP=false
VITE_BUILD_MINIFY=true

# CDN Configuration (Optional)
VITE_CDN_URL="https://cdn.your-domain.com"
VITE_STATIC_ASSETS_CDN=true

# ========================================
# SOCIAL & CONTACT
# ========================================
# Company Information
VITE_COMPANY_NAME="Your Company Name"
VITE_COMPANY_EMAIL="contact@your-domain.com"
VITE_SUPPORT_EMAIL="support@your-domain.com"

# Social Media (Optional)
VITE_TWITTER_URL="https://twitter.com/yourcompany"
VITE_LINKEDIN_URL="https://linkedin.com/company/yourcompany"

# ========================================
# LEGAL & COMPLIANCE
# ========================================
# Legal Pages
VITE_PRIVACY_POLICY_URL="https://your-domain.com/privacy"
VITE_TERMS_OF_SERVICE_URL="https://your-domain.com/terms"

# Regional Settings (Brazilian focus)
VITE_TIMEZONE="America/Sao_Paulo"
VITE_LOCALE="pt-BR"
VITE_CURRENCY_SYMBOL="R$"