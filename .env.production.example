# Production Environment Variables
# Copy this file to .env.production and fill in the actual values

# Application
APP_NAME=PDF Industrial Pipeline
APP_VERSION=2.0.0
ENVIRONMENT=production
DEBUG=false
SECRET_KEY=your-secret-key-here-change-this-in-production

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
CORS_ORIGINS=https://yourdomain.com,https://app.yourdomain.com

# Database
POSTGRES_PASSWORD=your-postgres-password
DATABASE_URL=postgresql://postgres:your-postgres-password@postgres:5432/pdf_pipeline
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Redis
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/2

# Storage (S3/MinIO)
STORAGE_BACKEND=s3
S3_BUCKET=pdf-pipeline-storage
S3_REGION=us-east-1
S3_ENDPOINT_URL=http://minio:9000
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key

# MinIO
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=your-minio-password

# Backup
BACKUP_S3_BUCKET=pdf-pipeline-backups

# Monitoring
ENABLE_METRICS=true
ENABLE_TRACING=true
JAEGER_HOST=jaeger
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Grafana
GRAFANA_PASSWORD=your-grafana-password

# Celery Flower
FLOWER_USER=admin
FLOWER_PASSWORD=your-flower-password

# ML Configuration
MODEL_PATH=/app/models
EMBEDDING_MODEL=sentence-transformers/paraphrase-multilingual-MiniLM-L12-v2

# Processing Limits
MAX_PDF_SIZE_MB=500
PDF_CHUNK_SIZE=5
CELERY_TASK_TIME_LIMIT=3600
CELERY_WORKER_CONCURRENCY=4

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# Feature Flags
ENABLE_JUDICIAL_ANALYSIS=true
ENABLE_ML_PREDICTIONS=true
ENABLE_SEMANTIC_SEARCH=true
ENABLE_ASYNC_PROCESSING=true

# Security
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json